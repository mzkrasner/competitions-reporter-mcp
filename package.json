{
  "name": "reporter-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for Recall Competitions API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "reporter-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzkrasner/reporter-mcp.git"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest watch --config vitest.integration.config.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "competitions",
    "recall",
    "api",
    "trading",
    "perpetual-futures"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "dotenv": "^16.3.1",
    "shx": "^0.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}